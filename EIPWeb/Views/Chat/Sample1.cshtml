@inherits System.Web.Mvc.WebViewPage
@{
    Layout = null;
}
@*參考範例 https://dotblogs.com.tw/mantou1201/archive/2013/05/16/104259.aspx*@
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>SignalR 聊天室-範例1</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/Sample1.js"></script>
    <style>
        #userName {
            display: none;
            color: red;
        }

        #messageBox, #chatList {
            float: left;
            height: 300px;
            width: 300px;
            overflow: auto;
        }

        #messageBox {
            border: 1px solid #000;
        }

        #chatList {
            width: 150px;
            overflow: scroll;
        }

        #list li {
            cursor: pointer;
        }

        #bar {
            clear: both;
        }

        p {
            margin: 0;
        }
    </style>
</head>
<body>
    <p id="userName">Hi！ </p>
    <div id="messageBox">
        <p>聊天室內容</p>
        <ul id="messageList"></ul>
    </div>
    <div id="chatList">
        <p>上線清單</p>
        <ul id="list">
        </ul>
    </div>
    <div id="bar">
        <select id="box">
            <option value="all">所有人</option>
        </select>
        <input type="text" id="message" />
        <input type="button" id="send" value="發送" />
    </div>
</body>
</html>